<ul class="article-list">
	<% page.posts.each(function(post){ %>
		<li>
			<div class="article-header">
				<h2><%- post.title %></h2>
				<p>
					<span><%- post.date %></span>
					<% post.tags.each(function(tag){ %>
						<span><%- link_to(url_for(tag.path), tag.slug, {external: false}) %></span>
					<% }) %>
					<span></span>
				</p>
			</div>
			<div class="article-section">
				<%- post.excerpt %>
			</div>
			<div class="article-footer">
				<a href="<%- url_for(post.path) %>"><%- theme.menu.excerpt_link %></a>
			</div>
		</li>
	<% }) %>
</ul>